modules = ["nodejs-20", "python-3.11"]
run = "uvicorn main:app --host 0.0.0.0 --port 5000"
hidden = [".config", ".git", "__pycache__", ".venv"]

[nix]
channel = "stable-24_05"
packages = ["ffmpeg-full", "gitFull", "libxcrypt", "playwright-driver", "xcodebuild", "zlib"]

[[ports]]
localPort = 5000
externalPort = 80

[env]
PORT = "5000"

[deployment]
deploymentTarget = "autoscale"
run = ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "5000"]
build = ["bash", "-c", "playwright install chromium 2>/dev/null || true"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start.sh"

[[workflows.workflow]]
name = "Run tests"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pytest tests/ -v"

[agent]
expertMode = true
