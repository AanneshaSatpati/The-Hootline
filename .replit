modules = ["nodejs-20", "python-3.11"]
run = "uvicorn main:app --host 0.0.0.0 --port 5000"
hidden = [".config", ".git", "__pycache__", ".venv"]

[nix]
channel = "stable-24_05"
packages = ["gitFull", "libxcrypt", "playwright-driver", "xcodebuild", "zlib"]

[[ports]]
localPort = 5000
externalPort = 80

[env]
PORT = "5000"

[deployment]
deploymentTarget = "reserved-vm"
run = ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "fuser -k 5000/tcp 2>/dev/null; sleep 1; python -m uvicorn main:app --host 0.0.0.0 --port 5000"

[[workflows.workflow]]
name = "Run tests"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pytest tests/ -v"

[agent]
expertMode = true
