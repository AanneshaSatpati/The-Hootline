modules = ["nodejs-20", "python-3.11"]
run = "uvicorn main:app --host 0.0.0.0 --port 5000"
hidden = [".config", ".git", "__pycache__", ".venv"]

[nix]
channel = "stable-24_05"
packages = ["ffmpeg-full", "gitFull", "libxcrypt", "playwright-driver", "xcodebuild", "zlib"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 5002
externalPort = 3001

[[ports]]
localPort = 5003
externalPort = 3002

[[ports]]
localPort = 5004
externalPort = 3003

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8099
externalPort = 8099

[[ports]]
localPort = 8111
externalPort = 4200

[env]
PORT = "5000"

[deployment]
deploymentTarget = "gce"
run = ["bash", "-c", "NOCTUA_ENV=prod bash start.sh"]
build = ["bash", "-c", "pip install -e . 2>/dev/null; playwright install chromium"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start.sh"

[[workflows.workflow]]
name = "Run tests"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pytest tests/ -v"

[agent]
expertMode = true
